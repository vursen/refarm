{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "paths": {
      "@refarm/project/*": [
        "project/*"
      ],
      "@refarm/runtime/*": [
        "runtime/*"
      ],
      "@refarm/analyzer/*": [
        "analyzer/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.html"
  ]
}
